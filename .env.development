# Configurações de Desenvolvimento
# Arquivo para ambiente de desenvolvimento e testes

# Ambiente
NODE_ENV=development
NEXT_PUBLIC_APP_ENV=development

# URLs da aplicação (localhost)
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXTPUBLIC_API_URL=http://localhost:3000/api

# Configurações de segurança (valores de desenvolvimento)
NEXTAUTH_SECRET=dev-secret-key-not-for-production
NEXTAUTH_URL=http://localhost:3000

# Rate Limiting (mais permissivo para desenvolvimento)
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW_MS=60000

# Upload de arquivos
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=text/csv,application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet

# Cache (TTL menor para desenvolvimento)
CACHE_TTL=300
REDIS_URL=redis://localhost:6379

# Logs (mais verboso para desenvolvimento)
LOG_LEVEL=debug
LOG_FORMAT=pretty
LOG_FILE_PATH=./logs/app.log

# Monitoramento (desabilitado para desenvolvimento)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# Performance (desabilitado para desenvolvimento)
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_PERFORMANCE_MONITORING=false

# Database (configuração local)
DATABASE_URL=postgresql://user:password@localhost:5432/dev_db
DATABASE_POOL_SIZE=5
DATABASE_SSL=false

# APIs externas (chaves de desenvolvimento)
GEMINI_API_KEY=your-dev-gemini-api-key
GROQ_API_KEY=your-dev-groq-api-key

# Configurações de CORS (mais permissivo)
CORS_ORIGIN=http://localhost:3000
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_CREDENTIALS=true

# Debug
DEBUG=true
VERBOSE_LOGGING=true