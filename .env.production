# Configurações de Produção
# IMPORTANTE: Substitua os valores de exemplo por valores reais antes do deploy

# Ambiente
NODE_ENV=production
NEXT_PUBLIC_APP_ENV=production

# URLs da aplicação
NEXT_PUBLIC_APP_URL=https://seu-dominio.com
NEXTPUBLIC_API_URL=https://api.seu-dominio.com

# Configurações de segurança
NEXTAUTH_SECRET=your-super-secret-key-change-this-in-production
NEXTAUTH_URL=https://seu-dominio.com

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# Upload de arquivos
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=text/csv,application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet

# Cache
CACHE_TTL=3600
REDIS_URL=redis://localhost:6379

# Logs
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=/var/log/app/app.log

# Monitoramento
SENTRY_DSN=your-sentry-dsn-here
SENTRY_ENVIRONMENT=production

# Performance
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_PERFORMANCE_MONITORING=true

# Database (se aplicável)
DATABASE_URL=postgresql://user:password@localhost:5432/production_db
DATABASE_POOL_SIZE=20
DATABASE_SSL=true

# APIs externas (exemplo)
GEMINI_API_KEY=your-gemini-api-key
GROQ_API_KEY=your-groq-api-key

# Configurações de CORS
CORS_ORIGIN=https://seu-dominio.com

# Configurações de sessão
SESSION_SECRET=your-session-secret-key
SESSION_MAX_AGE=86400000

# Health Check
HEALTH_CHECK_TOKEN=your-health-check-token

# Backup e Storage
STORAGE_PROVIDER=s3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket

# Configurações de email (se aplicável)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Configurações de CDN
CDN_URL=https://cdn.seu-dominio.com

# Configurações de compressão
COMPRESSION_ENABLED=true
COMPRESSION_LEVEL=6

# Timeouts
API_TIMEOUT=30000
DB_TIMEOUT=10000
FILE_UPLOAD_TIMEOUT=300000